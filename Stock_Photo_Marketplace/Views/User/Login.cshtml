@model Stock_Photo_Marketplace.Models.User
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha384-9ndCyUaIbzB9bV7FTWpc+Y9Z6FZ4tWQUkFhZP7/F8RMI5tTqk+xXW5KKF/m1dxtR" crossorigin="anonymous" />
    <style>
        .login-container {
            max-width: 400px;
            margin: auto;
            padding: 2rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>

</head>
<div class="login-container mt-5">
    <h2>@ViewData["Title"]</h2>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" required />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="PasswordHash" class="form-control" type="password" required />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
    <div class="mt-3 d-flex justify-content-end align-items-center">
    <span class="small me-2">New user?</span> 
    <a asp-controller="User" asp-action="Register" class="btn btn-secondary btn-sm"style="opacity: 0.5;">Register</a>
</div>

</div>
